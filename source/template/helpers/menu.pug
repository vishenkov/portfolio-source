mixin menu(menuList, itemsCount, highlightCurrent, mod)
  nav(class="menu"+(mod==""?"":" menu_"+mod))
    ul(class="menu__list"+(mod==""?"":" menu__list_"+mod))
      -var highlightCurrentMod = ""
      -var linkMod = ""
      if mod!=""
        -var linkMod = (mod==""?"":" menu__link_"+mod)
      -for (var count=0; count<itemsCount; count++)
        each item, key in menuList[count]
          li(class="menu__item"+(mod==""?"":" menu__item_"+mod))
            if highlightCurrent==true
              -highlightCurrentMod = (item==title?" menu__link_current":"")
            a(href=key+".html" class="menu__link"+ highlightCurrentMod + linkMod)= item
