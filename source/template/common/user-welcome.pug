extend _user

block var-user
  - var user_mod = 'welcome';

block user-add
  .welcome__socials
    +socials(socials,'welcome','')

block user-footer
  .welcome__menu
    nav.menu.menu_welcome
      ul.menu__list.menu__list_welcome
        each item, key in menu
          if key!='index' 
            li.menu__item.menu__item_welcome
              a(href=key+".html" class="menu__link menu__link_welcome")= item